@model FilmCreateViewModel
@{
    
   
}
<div class="container bootstrap snippet text-light">
    <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>NEW FILM</h1>

    <hr>
    <!-- edit form column -->
    <form enctype="multipart/form-data" class="form-horizontal" asp-controller="Film" asp-action="Create" method="post">
        <div class="row">
          

            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="filmPoster" style="width:100px; height:100px;" class="avatar img-circle myImage" alt="avatar" asp-append-version="true">
                    <br />
                    <label asp-for="filmPoster"></label>
                    <div class="custom-file">

                        <input class="custom-file-input" asp-for="filmPoster">
                        <label class="custom-file-label avatarPath" for="custom-file" style=" overflow-x: hidden; width: auto;">Choose file</label>
                    </div>
                </div>
            </div>
            <div class="col-md-9 personal-info">
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="filmName"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="filmName" class="form-control" />
                        <span asp-validation-for="filmName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="timeOfFilm"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="timeOfFilm" class="form-control" />
                        <span asp-validation-for="timeOfFilm" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2">
                        <label asp-for="filmDescription"></label>
                    </div>
                    <div class="col-sm-10">
                        <textarea asp-for="filmDescription" class="form-control" >
                        </textarea>
                    </div>
                </div>
                <div class="form-group my-2">
                    <div class="col-sm-12 text-right">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </form>


</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });

    </script>
}
<hr>
