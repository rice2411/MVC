@model HomeBookViewmodel
@{ 
    var avatarPath = $"/images/{(Model.filmPoster ?? "filmdefault.jpg")}";
}
<style>
    * {
        color: WHITE;
        
    }
    .screen {
        background-color: #fff;
        height: 70px;
        width: 95%;
        margin: 15px 0;
        transform: rotateX(-45deg);
        box-shadow: 0 3px 10px rgba(255, 255, 255, 0.7);
    }
    .seat {
        background-color: #444451;
        height: 70px;
        width: 70px;
        margin: 3px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        
    }
        .seat.selected {
            background-color: #6feaf6;
        }

        .seat.occupied {
            background-color: #fff;
        }

        .seat:nth-of-type(2) {
            margin-right: 18px;
        }

        .seat:nth-last-of-type(2) {
            margin-left: 18px;
        }

        .seat:not(.occupied):hover {
            cursor: pointer;
            transform: scale(1.2);
        }
    input[type=checkbox] {
       
        background-color: #444451;
        height: 70px;
        width: 70px;
        margin: 3px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
        input[type=checkbox]:checked {
            background-color: #6feaf6;
        }
    .customer {
        display: block;
        position: relative;
        padding-left: 35px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 22px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

        /* Hide the browser's default checkbox */
        .customer input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }

    /* Create a custom checkbox */
    .checkmark {
        position: absolute;
        background-color: #444451;
        height: 70px;
        width: 70px;
        margin: 3px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    /* On mouse-over, add a grey background color */
    .customer:hover input ~ .checkmark {
        background-color: #ccc;
    }

    /* When the checkbox is checked, add a blue background */
    .customer input:checked ~ .checkmark {
        background-color: #6feaf6;
    }

    /* Create the checkmark/indicator (hidden when not checked) */
    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }

    /* Show the checkmark when checked */
    .customer input:checked ~ .checkmark:after {
        display: block;
    }

    /* Style the checkmark/indicator */
    .customer .checkmark:after {
        left: 9px;
        top: 5px;
        width: 5px;
        height: 10px;
        border-width: 0 3px 3px 0;
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);
    }
</style>
<div class="container">
    <div class="container bootstrap snippet">
        <h1 class="text-center"><span class="glyphicon glyphicon-user"></span>DETAIL</h1>
        <br /><br />
        <hr>
        <!-- edit form column -->

        <div class="row" data-aos="fade-up" data-aos-duration="2000">

            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="@avatarPath" style="width: 100%; height:100%">
                    <br /><br />
                    <h5> @Model.filmName</h5>
                    <h5> @Model.timeOfFilm Minutes</h5>
                    <a class="btn btn-danger">Confirm</a>
                    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Cancel</a>
                </div>
            </div>
            <div class="col-md-9 personal-info">
                <div class="row form-group">
                    <div class="col-sm-12">
                        <div class="screen"></div>
                    </div>
                </div>
                @for (int i = 0; i < 5; i++)
                {
                    <div class="row form-group">

                        @for (int j = 0; j < 10; j++)
                        {
                            <input type="checkbox" class="seat"/>
                        }
                    </div>
                }
            </div>
        </div>



    </div>
</div>
@section Scripts{
    <script>

        AOS.init();
    </script>
}
