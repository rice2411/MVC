@model LoginViewModel

@{
    ViewBag.Title = "Login";

}

<form enctype="multipart/form-data" asp-controller="Account" asp-action="Login" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="User"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="User" class="form-control" />
            <span asp-validation-for="User" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Rememberme">&nbsp;</label>
        </div>
        <div class="col-sm-10">
            <label class="form-check-label">
                <input asp-for="Rememberme" type="checkbox"> Remember me
            </label>
        </div>
    </div>
    <div class="form-group my-2">
        <div class="col-sm-12 text-right">
            <button type="submit" class="btn btn-primary">Login</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>
