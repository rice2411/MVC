@model IEnumerable<Role>
@{ 
    ViewBag.Title = "Role Management";
}
<h3>ROLE MANAGEMENT</h3>
<a asp-controller="Role" asp-action="Create" class="btn btn-success mr-auto">Create Role</a>

<table class="table table-bordered table-hover mt-2" >
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Role's Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
       foreach(var role in Model)
            {
                <tr>
                    <td>@role.id</td>
                    <td>@role.roleName</td>
                    <td class="text-center">
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.id" class="btn btn-warning">Edit</a>
                      
                    </td>
                </tr>
            }
        }
    </tbody>
</table>