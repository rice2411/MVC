@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<h3>ROLE MANAGEMENT &gt; EDIT ROLE</h3>
<form enctype="multipart/form-data" asp-controller="Role" asp-action="Edit" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="roleName"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="roleName" class="form-control" />
            <span asp-validation-for="roleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group my-2">
        <div class="col-sm-12 text-right">
            <button type="submit" class="btn btn-primary">Update</button>
            <button asp-controller="Role" asp-action="Delete" asp-route-id="@Model.id" type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>