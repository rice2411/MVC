@model UserCreateViewModel
@{
    ViewBag.Title = "Create User";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}

    <form enctype="multipart/form-data" asp-controller="User" asp-action="Create" method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="User"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="PassWord"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="PassWord" class="form-control" />
                <span asp-validation-for="PassWord" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="row  form-group">
            <div class="col-sm-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-sm-10"> 
                <select asp-for="RoleId" class="cusom-select">
                    <option value="">Select a role</option>
                    @if(roles != null && roles.Any())
                    {
                        foreach(var role in roles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    }
                </select>

                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group my-2">
            <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </form>
