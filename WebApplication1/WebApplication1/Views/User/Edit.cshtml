@model EditUserViewModel
@{
    ViewBag.Title = "Edit Role";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}
<h3>ROLE MANAGEMENT &gt; EDIT ROLE</h3>
<form enctype="multipart/form-data" asp-controller="User" asp-action="Edit" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="userId" hidden />
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="phoneNumber"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="phoneNumber" class="form-control" />
            <span asp-validation-for="phoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="City"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Gender"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="row  form-group">
        <div class="col-sm-2">
            <label asp-for="RoleId"></label>
        </div>
        <div class="col-sm-10">
            <select asp-for="RoleId" class="cusom-select">
                <option value="">Select a role</option>
                @if (roles != null && roles.Any())
                {
                    foreach (var role in roles)
                    {
                        <option value="@role.Id" selected ="@(role.Id == Model.RoleId)">@role.Name</option>
                    }
                }
            </select>

            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group my-2">
        <div class="col-sm-12 text-right">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>