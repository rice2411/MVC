@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}

    <form enctype="multipart/form-data" asp-controller="Account" asp-action="Register" method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="User"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="User" class="form-control" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Emaill"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Emaill" class="form-control" />
                <span asp-validation-for="Emaill" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ConfirmPassword"></label>
            </div>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group my-2">
            <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </form>
